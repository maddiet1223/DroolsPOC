package rules

import com.maddie.DroolSession.PaymentCounter

rule "Payment counter check"
   when
   //$temp is variable name
   $temp: PaymentCounter()
   then
   System.out.println("Payment Counter inserted: " + $temp.channel+" and amount is " + $temp.amount);
   end
rule "Payment counter accumulate"
   when
   $temp: PaymentCounter()
   accumulate (PaymentCounter();$occurance: count())
   then
   System.out.println("Payment Counter channel: " + $temp.channel+" and amount is " + $temp.amount + "Accumulate value:" +$occurance);
   end   